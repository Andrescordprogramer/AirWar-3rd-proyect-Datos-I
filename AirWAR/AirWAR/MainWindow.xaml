<Window x:Class="AirWAR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Juego Simple" Height="350" Width="525">
    <Grid>
        <Button x:Name="GameButton" Content="Haz clic en mí" Click="GameButton_Click" Width="100" Height="50"/>
        <TextBlock x:Name="ScoreText" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" FontSize="16"/>
        <TextBlock x:Name="TimerText" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" FontSize="16"/>
    </Grid>
</Window>
